<h1>Employees</h1>

{{#if employees.length}}
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Department</th>
        <th>Start Date</th>
        <th>Job Title</th>
        <th>Salary</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each employees}}
        <tr>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{department}}</td>
          <td>{{startDateDisplay}}</td>
          <td>{{jobTitle}}</td>
          <td>{{salary}}</td>
          <td class="actions">
            <a href="/employees/{{_id}}/edit">Update</a>
            <a href="/employees/{{_id}}/delete">Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>No employees found.</p>
{{/if}}
